{
  "name": "bubble-and-squeak",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Abi Harrison-Nye",
  "scripts": {
    "dev": "react-scripts start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "types": "npx tsc --noEmit",
    "lint": "eslint src/ --ext .tsx,.ts",
    "lint:fix": "eslint src/ --ext .tsx,.ts --fix",
    "lint:a11y": "eslint src/ --ext .tsx,.ts --config .eslintrc-a11y.js",
    "test:a11y": "npm run build && npm run test:a11y:lighthouse && npm run test:a11y:axe",
    "test:a11y:lighthouse": "lighthouse http://localhost:3000 --only-categories=accessibility --chrome-flags='--headless' --output=json --output-path=./lighthouse-a11y-report.json",
    "test:a11y:axe": "axe http://localhost:3000 --save axe-a11y-report.json",
    "serve:build": "npx serve -s build -l 3000",
    "compress:coasters": "./src/scripts/compress-coasters.sh",
    "convert:webp": "./src/scripts/convert-and-compress-images.sh",
    "resize": "node ./src/scripts/resize-images.js public/images",
    "test:a11y:script": "./src/scripts/test-a11y.sh",
    "test:accessibility:script": "./src/scripts/test-accessibility.sh"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.18",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "jsx-a11y/alt-text": "error",
      "jsx-a11y/aria-props": "error",
      "jsx-a11y/aria-proptypes": "error",
      "jsx-a11y/aria-unsupported-elements": "error",
      "jsx-a11y/role-has-required-aria-props": "error",
      "jsx-a11y/role-supports-aria-props": "error"
    }
  },
  "license": "ISC",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/styled-components": "^5.1.34",
    "axe-core": "^4.10.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jest-axe": "^10.0.0",
    "sharp": "^0.34.3",
    "typescript": "^5.1.6"
  }
}
